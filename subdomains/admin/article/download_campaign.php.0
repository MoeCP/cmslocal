        $filename = preg_replace( '#\s+#', '_', trim($var['keyword']) );
        $filename = preg_replace( $reg_str, '_', $filename );//windows valid file name,
        $dest->newFile($filename . $suffix);
        $article_doc  = getArticleDoc($var);
        $dest->writeData($article_doc);
    }
	$dest->close();//
